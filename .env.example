# Prism 环境配置示例
# 复制此文件为 .env 并修改相应配置

# 版本信息
VERSION=v1.0.0
GIT_COMMIT=latest

# 日志级别
LOG_LEVEL=info

# Redis 配置
REDIS_PASSWORD=prism123

# 监控配置 (可选)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# API 配置
PRISM_API_PORT=9090
PRISM_API_SECRET=your-secret-key-here

# 代理配置
PRISM_PROXY_PORT=7890
PRISM_PROXY_MODE=rule

# 数据库配置
PRISM_DB_DSN=data/prism.db

# 开发环境配置
PRISM_DEV_MODE=false
PRISM_DEBUG=false